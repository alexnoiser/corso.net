@using SuperBiblioteca.Models

@model Autore





@{
    ViewData["Title"] = "Edit Autore";
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<h1>Modifica Autore</h1>

<form method="post">
    <div class="form-group">
        <label class="control-label" asp-for="Nome"></label>
        <input class="form-control" asp-for="Nome" />
        <span asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Indirizzo"></label>
        <input class="form-control" asp-for="Indirizzo" />
        <span asp-validation-for="Indirizzo"></span>
    </div>
    

    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save" />
    </div>
</form>