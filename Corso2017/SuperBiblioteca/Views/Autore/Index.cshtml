@model IEnumerable<Autore>

@{
    ViewData["Title"] = "Lista Autori";
}




<table class="table">
    <thead>
        <tr>
            <td>Nome </td>
            <td>Indirizzo</td>
            @*<td>Biblioteca</td>
            <td>Numero di Pagine</td>*@
            <td colspan="3">Operations</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var au in Model)
        {
            <tr>
                <td>@au.Nome</td>
                <td>@au.Indirizzo</td>
                
                <td>
                    <a class="btn btn-primary"
                       asp-controller="Autore"
                       asp-action="Edit"
                       asp-route-id="@au.Id">Details</a>
                </td>
                <td>
                    <a class="btn btn-success"
                       asp-controller="Autore"
                       asp-action="LibriPerAutore"
                       asp-route-id="@au.Id">Books</a>
                </td>
                <td>
                    <a class="btn btn-danger"
                       asp-controller="Autore"
                       asp-action="Delete"
                       asp-route-id="@au.Id">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="6">
                <a class="btn btn-primary"
                   asp-controller="Autore"
                   asp-action="Edit">Aggiungi Autore</a>
            </td>
        </tr>
    </tbody>
</table>