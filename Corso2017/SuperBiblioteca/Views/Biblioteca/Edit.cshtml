@using SuperBiblioteca.Models

@model Biblioteca





@{
    ViewData["Title"] = "Edit Biblioteca";
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<h1>Modifica Biblioteca</h1>

<form method="post">
    <div class="form-group">
        <label class="control-label" asp-for="Nome"></label>
        <input class="form-control" asp-for="Nome" />
        <span asp-validation-for="Nome"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Citta"></label>
        <input class="form-control" asp-for="Citta" />
        <span asp-validation-for="Citta"></span>
    </div>


    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save" />
    </div>
</form>
