@model IEnumerable<Materiale>

@{
    ViewData["Title"] = "Lista Materiali";
}

<table class="table">
    <thead>
        <tr>
            <td>Nome Materiale</td>
            <td>Classe di appartenenza</td>
            <td>Coefficiente di fragilità</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Nome</td>
                <td>@m.ClasseAppartenenza</td>
                <td>@m.CoeffFragilita</td>
                <td>
                    <a class="btn btn-primary"
                       asp-controller="Materiale"
                       asp-action="Edit"
                       asp-route-id="@m.Id">
                        Details
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger"
                       asp-controller="Materiale"
                       asp-action="Delete"
                       asp-route-id="@m.Id">
                        Delete
                    </a>
                </td>
            </tr>

        }
        <tr>
            <td colspan="6">
                <a class="btn btn-primary"
                   asp-controller="Materiale"
                   asp-action="Edit">
                    Aggiungi Nuovo Materiale
                </a>
            </td>
        </tr>




    </tbody>

</table>